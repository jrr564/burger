<div class="container">
  <div class="row">
    <div class="col-sm text-center">
      <img src="/assets/img/burger.png">
      <h1>BURGER TIME!!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <div id="addBurger" class="col-sm-8 text-center">
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger"></label>
          <textarea class="form-control" id="newBurger" name="name"></textarea>
        </div>
        <button type="submit" class="btn btn-secondary mb-2">Submit</button>
        <p class="text-center">ENTER A BURGER</p>
      </form>
    </div>
    <div class="col-sm-2"></div>
  </div>
  <div class="row">
    <div class="col-sm">
      <ul class="list-group">
        <h3>BURGERS TO EAT</h3>
        {{#each burger}}
          {{#unless devoured}}
            <li class="list-group-item">
              {{id}}. 
              {{burger_name}}
              <button class="update btn btn-secondary btn-sm" data-id="{{id}}" data-status="{{isDevoured}}">
                SNARF IT!
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <ul class="list-group">
        <h3>EATEN</h3>
        {{#each burger}}
          {{#if devoured}}
            <li class="list-group-item disabled">
              {{id}}. 
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  
</div>